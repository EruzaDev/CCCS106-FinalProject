# HonestBallot Configuration
# Copy this file to .env and configure your settings

# Application Settings
APP_NAME=HonestBallot
APP_VERSION=1.0.0
DEBUG=False

# Security Settings
# IMPORTANT: Generate a secure random key for production!
# You can use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-in-production-to-a-secure-random-key

# Session Settings
SESSION_TIMEOUT_MINUTES=30

# Credential Stuffing Protection
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Database Settings
DATABASE_NAME=voting_app.db

# Password Hashing (higher = more secure but slower)
BCRYPT_ROUNDS=12

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=app.log
